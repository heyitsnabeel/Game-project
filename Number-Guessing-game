print("Welcome to the Quiz game")
play = input("Can you play the game: ")
score = 0
if play.lower()=="yes":
        answer = input("Full Form Of CPU is: ")
        if answer.lower()=="central processing unit":
            print("correct")
            score+=1
        else:
            print("Incorrect")
        
        answer = input("Full Form Of GPU is: ")
        if answer.lower()=="graphics processing unit":
            print("correct")
            score+=1
        else:
            print("Incorrect")  
        
        answer = input("Full Form Of RAM is: ")
        if answer.lower()=="random access memory":
            print("correct")
            score+=1
        else:
            print("Incorrect")
            
        answer = input("Full Form Of ROM is: ")
        if answer.lower()=="read only memory":
            print("correct")
            score+=1
        else:
            print("Incorrect")    
print(f"you have to score in this quiz is : {score}")     